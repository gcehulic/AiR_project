<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/player_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/youtube_slika"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"
            android:background="#ff000000"
            android:padding="30dp"
            android:src="@drawable/youtube_greska" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#8e848484"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text=" IZVORNO IME:"
                />

            <TextView
                android:id="@+id/naslovSerije"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#8e848484"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:padding="2dp"
                android:text="ŽANROVI:"
                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.19">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/akcija"
                    android:layout_margin="4dp"
                    android:padding="2dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Akcija "
                    />

                <TextView
                 android:id="@+id/komedija"
                 android:layout_margin="4dp"
                 android:padding="2dp"
                 android:visibility="gone"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:text="Komedija"/>

             <TextView
                 android:id="@+id/drama"
                 android:layout_margin="4dp"
                 android:padding="2dp"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:visibility="gone"
                 android:text="Drama"/>
             <TextView
                 android:id="@+id/fantazija"
                 android:layout_margin="4dp"
                 android:padding="2dp"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:visibility="gone"
                 android:text="Fantazija"/>
             <TextView
                 android:id="@+id/s_f"
                 android:layout_margin="4dp"
                 android:padding="2dp"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:visibility="gone"
                 android:text="SF"/>
             <TextView
                 android:id="@+id/krimi"
                 android:layout_margin="4dp"
                 android:padding="2dp"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:visibility="gone"
                 android:text="Krimi"/>
             <TextView
                 android:id="@+id/dokumentarni"
                 android:layout_margin="4dp"
                 android:padding="2dp"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:visibility="gone"
                 android:text="Dokumentarni"/>
             <TextView
                 android:id="@+id/obiteljski"
                 android:layout_margin="4dp"
                 android:padding="2dp"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:visibility="gone"
                 android:text="Obiteljski"/>
             <TextView
                 android:id="@+id/triler"
                 android:layout_margin="4dp"
                 android:padding="2dp"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:visibility="gone"
                 android:text="Triler"/>
             <TextView
                 android:id="@+id/reality"
                 android:layout_margin="4dp"
                 android:padding="2dp"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:visibility="gone"
                 android:text="Reality"/>
             <TextView
                 android:id="@+id/animirani"
                 android:layout_margin="4dp"
                 android:padding="2dp"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:visibility="gone"
                 android:text="Anirmirani"/>
             <TextView
                 android:id="@+id/avantura"
                 android:layout_margin="4dp"
                 android:padding="2dp"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:visibility="gone"
                 android:text="Avantura"/>
            </LinearLayout>

                </ScrollView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#8e848484"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:padding="2dp"
                android:text="GODINA:"
                />

            <TextView
                android:id="@+id/godina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:padding="2dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#8e848484"
            android:layout_height="40dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:padding="2dp"
                android:text=" SADRŽAJ SERIJE:"  />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_opis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="Times New Roman"
            android:text=""
            android:textSize="17sp" />
    </LinearLayout>
    </LinearLayout>

</ScrollView>

