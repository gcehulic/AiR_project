<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    android:layout_marginTop="11dp"
    android:layout_marginBottom="110dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#FFFFE9"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:layout_width="92dp"
            android:layout_height="match_parent">

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout">

                    <TextView
                        android:text="Naslov serije"
                        android:layout_width="match_parent"
                        android:textSize="17sp"
                        android:layout_height="46dp"
                        android:id="@+id/serija_naslov" />

                    <TextView
                        android:text="Godina serije"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/serija_godina" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-5dp"
                    android:layout_below="@+id/linearLayout"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="13dp">
                    <TextView
                        android:id="@+id/akcija"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:visibility="gone"
                        android:background="#004C99"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="4dp"
                        android:text="Akcija"/>

                    <TextView
                        android:id="@+id/avantura"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:visibility="gone"
                        android:background="#004C99"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="4dp"
                        android:text="Avantura"/>

                    <TextView
                        android:id="@+id/komedija"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:visibility="gone"
                        android:background="#004C99"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="4dp"
                        android:text="Komedija"/>

                    <TextView
                        android:id="@+id/krim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:visibility="gone"
                        android:background="#004C99"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="4dp"
                        android:text="Krim"/>

                    <TextView
                        android:id="@+id/dokumentarni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:visibility="gone"
                        android:background="#004C99"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="4dp"
                        android:text="Dokumentarac"/>

                    <TextView
                        android:id="@+id/drama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:visibility="gone"
                        android:background="#004C99"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="4dp"
                        android:text="Drama"/>

                    <TextView
                        android:id="@+id/obiteljska"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:visibility="gone"
                        android:background="#004C99"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="4dp"
                        android:text="Obiteljska"/>

                    <TextView
                        android:id="@+id/fantazija"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:visibility="gone"
                        android:background="#004C99"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="4dp"
                        android:text="Fantazija"/>

                    <TextView
                        android:id="@+id/sf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:visibility="gone"
                        android:background="#004C99"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="4dp"
                        android:text="SF"/>

                    <TextView
                        android:id="@+id/triler"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:visibility="gone"
                        android:background="#004C99"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="4dp"
                        android:text="Triler"/>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>